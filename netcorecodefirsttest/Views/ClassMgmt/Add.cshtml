@using netcorecodefirsttest.Domains
@model ClassInfo
@{
    ViewData["Title"] = "Add";
}

@if (ViewBag.userName != null)
{
    <h2>当前用户：@ViewBag.userName </h2>
}
<form role="form" action="@Url.Action("Save")">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <label for="name">名称</label>
        <input type="text" class="form-control" value="@Model.Name" id="name" name="Name" placeholder="请输入名称">
    </div>
    <div class="form-group">
        <label for="name">备注</label>
        <input type="text" class="form-control" id="name" value="@Model.Remark" name="Remark" placeholder="请输入备注">
    </div>
    <button type="submit" class="btn btn-default">提交</button>
</form>

