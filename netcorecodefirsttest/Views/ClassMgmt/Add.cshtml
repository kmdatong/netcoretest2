@using netcorecodefirsttest.Domains
@model ClassInfo
@{
    ViewData["Title"] = "Add";
}

@if (ViewBag.userName != null)
{
    <h2>当前用户：@ViewBag.userName </h2>
}

    <div class="form-main">
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>表单集合演示</legend>
        </fieldset>

        <form class="layui-form" action="@Url.Action("Save")" style="margin-top:40px; width:600px;">
            @Html.HiddenFor(x => x.Id)
            <div class="layui-form-item">
                <label class="layui-form-label">名称</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input" value="@Model.Name" id="name" name="Name" placeholder="请输入名称">

                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">备注</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input" id="name" value="@Model.Remark" name="Remark" placeholder="请输入备注">

                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button type="submit" class="layui-btn layui-btn-normal">保  存</button>
                    <a href="@Url.Action("list")" class="layui-btn layui-btn-primary">返回</a>
                </div>
                
            </div>
           
        </form>
    </div>


